<% layout("/layouts/boilerplate.ejs"); %>
    <script>
        const mapToken = "<%= process.env.MAP_TOKEN%>";
        const listing = <%- JSON.stringify(listing)%>;
    </script>
    <div class="row">
        <div class="col-8 mt-3 offset-3">
            <h3>
                <%=listing.title%>
            </h3>
        </div>
        <div class="card show-card col-6 offset-3  listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_img">
            <div class="card-body">
                <p class="card-text">
                    Owned By: <b><i>
                            <%= listing.owner.username %>
                        </i></b></p>

                <p class="card-text">
                    <%=listing.description%>
                </p>

                <p class="card-text">&#x20B9; <%=listing.price.toLocaleString("en-IN")%></p>

                <p class="card-text">
                    <%=listing.location%>
                </p>

                <p class="card-text">
                    <%=listing.country%>
                </p>
            </div>
        </div>
        <% if(currUser && listing.owner._id.equals(currUser._id)) {%>
        <div class="show-btn">
            <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark edit-btn offset-3 mb-3">Edit</a>

            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                <button class="btn btn-dark offset-5 mb-3">Delete</button>
            </form>
        </div>
        <% } %>
            <% if(currUser) {%>
                <div class="col-8 mt-3 offset-3 mb-3">
                    <hr />

                    <h4>Leave a Review</h4>
                    <form action="/listings/<%=listing.id%>/reviews" method="POST" novalidate class="needs-validation">
                        <div>
                            <label class="form-label" for="rating">Rating:</label>
                            <br />
                            <fieldset class="starability-heart">
                                <input type="radio" id="no-rate" class="input-no-rate" name="reviews[rating]" value="1"
                                    checked aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="reviews[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="reviews[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="reviews[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="reviews[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="reviews[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>
                        </div>
                        <div>
                            <label for="comment" class="form-label">Leave a Comment</label>
                            <textarea cols="30" rows="5" class="form-control" name="reviews[comment]"
                                required></textarea>
                            <div class="invalid-feedback">Please add a comment for review</div>

                        </div>
                        <div class="mt-3">
                            <button class="btn btn-outline-dark">Submit</button>
                        </div>
                    </form>
                    <%}%>
                        <div>
                        
                            <% if(listing.reviews.length) {%>
                                <h4>All Reviews</h4>
                                <div class="row">
                                    <% for(review of listing.reviews) { %>
                                        <div class="card col-5 mb-3 ms-3">
                                            <div class="card-body">
                                                <div class="card-title">
                                                    <%=review.author.username%>
                                                </div>
                                                <div class="card-text">
                                                    <p class="starability-result" data-rating="<%=review.rating%>"></p>
                                                    <p>
                                                        <%= review.comment%>
                                                    </p>
                                                </div>
                                                <% if (currUser && currUser.author._id.equals(currUser._id)) {%>
                                                <form class="mb-3" method="POST"
                                                    action="/listings/<%=listing.id%>/reviews/<%=review.id%>?_method=DELETE">
                                                    <button class="btn btn-dark btn-sm">Delete</button>
                                                </form>
                                                <%}%>
                                            </div>
                                        </div>
                                        <% } %>
                                </div>
                                <%}%>
                        </div>

                </div>
                <div class="col-6 mt-3 offset-3 mb-2">
                    <h3>Where you'll be</h3>
                    <div id="map"></div>
                </div>
    </div>
                    <script src="/js/map.js"></script>
